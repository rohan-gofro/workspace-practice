<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />

	<!-- Definition for student bean -->
	<bean id="addressbean" class="Address">
		<property name="houseNo" value="123"></property>
		<property name="city" value="New Delhi"></property>
		<property name="locality" value="Kalka Ji"></property>
		<property name="state" value="NA"></property>
	</bean>

	<bean id="studentbean" class="Student">
		<constructor-arg value="Rohan Gupta"></constructor-arg>
	</bean>

</beans>