<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  

<bean id = "addr" class="Address">
<property name="city" value="Moradabad"></property>
<property name="country" value="India"></property>
</bean>
<bean id = "nm" class="Name">
<property name="fname" value="Rohan"></property>
<property name="lname" value="Gupta"></property>
</bean>
<bean id = "stu" class="Student" autowire="constructor"></bean>
  
</beans>  